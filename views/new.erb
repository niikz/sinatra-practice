<div class="contents">
  <form action="/notes" method="POST" class="form">
    <div class="form_item">
      <label for="title">タイトル</label>
      <input type="text" id="title" name="title" placeholder="タイトルを入力" required>
    </div>
    <div class="form_item">
      <label for="comment">コメント</label>
      <textarea id="comment" name="comment" rows="7" cols="33" placeholder="コメントを入力"></textarea>
    </div>
    <div class="button_items">
      <input type="submit" value="保存" class="button save">
    </div>
  </form>
</div>
